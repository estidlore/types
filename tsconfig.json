{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "noEmit": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "removeComments": false,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
